<% include ../partials/header %>

<div class="container">
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% currentUser.savedExercises.forEach(function(exercise){ %>
			<div class="col-md-3 col-sm-6">
				<div>
					<figure class="figure">
						<img class="figure-img img-fluid rounded" src="<%= exercise.image %>">
						<figcaption class="figure-caption">
							<%= exercise.name %>
						</figcaption>
						<a href="/exercises/<%= exercise._id %>" class="btn btn-primary">Details</a>
						<form action="/exercises/<%= exercise._id %>/profile?_method=DELETE" method="POST">
							<button class="btn btn-danger btn-xs">Delete</button>
						</form>
					</figure>
				</div>
			</div>
		<% }); %>
	</div>
</div>
<% include ../partials/footer %>
